<Window x:Class="MWMP.ServerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Server" Height="260" Width="400" 
        WindowStartupLocation="CenterOwner" 
        Background="#252540" Foreground="White" 
        ResizeMode="NoResize" 
        FontFamily="Segoe UI" FontSize="14">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Server Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="80" Content="Name:" VerticalAlignment="Center" Foreground="White"/>
            <Border Background="#2E2E4A" BorderBrush="#555" BorderThickness="1" CornerRadius="8">
                <TextBox x:Name="NameTextBox" Background="Transparent" 
                         Foreground="White" FontWeight="SemiBold" Padding="5" Width="260"/>
            </Border>
        </StackPanel>

        
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="80" Content="IP:" VerticalAlignment="Center" Foreground="White"/>
            <Border Background="#2E2E4A" BorderBrush="#555" BorderThickness="1" CornerRadius="8">
                <TextBox x:Name="IPTextBox" Background="Transparent" 
                         Foreground="White" FontWeight="SemiBold" Padding="5" Width="260"/>
            </Border>
        </StackPanel>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="80" Content="Mode:" VerticalAlignment="Center" Foreground="White"/>
            <Border Background="#2E2E4A" BorderBrush="#555" BorderThickness="1" CornerRadius="8">
                <TextBox x:Name="ModeTextBox" Background="Transparent" 
                         Foreground="White" FontWeight="SemiBold" Padding="5" Width="260"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Width="80" Content="Tag:" VerticalAlignment="Center" Foreground="White"/>
            <Border Background="#2E2E4A" BorderBrush="#555" BorderThickness="1" CornerRadius="8">
                <TextBox x:Name="TagTextBox" Background="Transparent" 
                 Foreground="White" FontWeight="SemiBold" Padding="5" Width="260"/>
            </Border>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
            <!-- Save Button -->
            <Button x:Name="SaveButton" Content="Save" Width="50" Height="25" Margin="0,0,5,0" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    Cursor="Hand" BorderThickness="0" Padding="5">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Cancel Button -->
            <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="25"
                    Background="#F44336" Foreground="White" FontWeight="Bold"
                    Cursor="Hand" BorderThickness="0" Padding="5">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
