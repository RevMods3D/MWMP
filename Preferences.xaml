<Window x:Class="MWMP.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E2F"
        Foreground="White">

    <Window.Resources>
        <!-- Copy TabControl & TabItem Styles from LauncherWindow -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#2A2A40"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2A2A40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                CornerRadius="6,6,0,0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#555577"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#444466"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Reuse LauncherButton style -->
        <Style x:Key="LauncherButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3A5A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#555577"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A7A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <TabControl Background="#2A2A40" Foreground="White">
            <!-- Appearance Tab -->
            <TabItem Header="Appearance">
                <StackPanel Margin="10">
                    <TextBlock Text="Theme:" FontWeight="Bold"/>
                    <ComboBox x:Name="ThemeComboBox" Width="200" SelectedIndex="0" SelectionChanged="ThemeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Dark"/>
                        <ComboBoxItem Content="Light"/>
                        <ComboBoxItem Content="Custom"/>
                    </ComboBox>

                    <!-- Custom color pickers -->
                    <StackPanel x:Name="CustomColorsPanel" Margin="10,20,0,0" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Launcher Background:" VerticalAlignment="Center"/>
                            <Button x:Name="LauncherBackgroundColorButton" Content="Select" Width="80" Margin="10,0,0,0" Click="SelectLauncherBackgroundColor_Click"/>
                            <Rectangle x:Name="LauncherBackgroundPreview" Width="50" Height="25" Fill="Gray" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Menu Background:" VerticalAlignment="Center"/>
                            <Button x:Name="MenuBackgroundColorButton" Content="Select" Width="80" Margin="10,0,0,0" Click="SelectMenuBackgroundColor_Click"/>
                            <Rectangle x:Name="MenuBackgroundPreview" Width="50" Height="25" Fill="Gray" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Button Color:" VerticalAlignment="Center"/>
                            <Button x:Name="ButtonColorButton" Content="Select" Width="80" Margin="10,0,0,0" Click="SelectButtonColor_Click"/>
                            <Rectangle x:Name="ButtonColorPreview" Width="50" Height="25" Fill="Gray" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Servers Tab -->
            <TabItem Header="Servers">
                <StackPanel Margin="10">
                    <CheckBox x:Name="AutoRefreshCheckBox" Content="Auto-refresh server list"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Refresh interval (seconds):" VerticalAlignment="Center"/>
                        <TextBox x:Name="RefreshIntervalTextBox" Width="50" Text="60" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Behavior Tab -->
            <TabItem Header="Behavior">
                <StackPanel Margin="10">
                    <CheckBox x:Name="StartMinimizedCheckBox" Content="Start minimized"/>
                    <CheckBox x:Name="ConfirmOnExitCheckBox" Content="Confirm on exit"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Bottom buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="OK" Width="100" Style="{StaticResource LauncherButton}" Click="OK_Click"/>
            <Button Content="Cancel" Width="100" Style="{StaticResource LauncherButton}" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
